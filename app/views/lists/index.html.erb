<h1> Todo Lists</h1>

<div class="row">
  <div class="col-md-8">
    <% @lists.each do |list| %>
      <div class="media">
        <h4 class="media-heading">
          <%= link_to list.name, list %>
        </h4>
      </div>
      <% end %>
    </div>


  <div class="col-md-4">
    <% if policy(List.new).create? %>
    <%= link_to "New List", new_list_path, class: 'btn btn-success'%>
    <% end %>
  </div>
</div>

</div>
