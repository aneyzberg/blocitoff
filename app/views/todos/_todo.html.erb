<tr>
  <td><%= todo.description %>
  </td>
  <td><%= time_ago_in_words(todo.expiration) %></td>
  <td><% if policy(todo).destroy? %>
    <%= link_to "Delete Todo", [@list, todo], method: :delete, class: 'btn btn-danger',
    data: {confirm: 'Are you sure you want to delete this topic?'} %>
    <% end %>
  </td>
</tr>